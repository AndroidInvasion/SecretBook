<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_screen_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/unedit_title"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:text="@string/intro_welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/lightBlack"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="200dp"
        android:contentDescription="@string/intro_content_description"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/intro_one" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/lightBlack"
            android:textSize="16sp"
            tools:text="Покупайте дешевле" />

        <TextView
            android:id="@+id/description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="Мы собираем только лучшие предложения. А еще у нас есть акции и скидки специально для читателей secretbook." />
    </LinearLayout>
</LinearLayout>